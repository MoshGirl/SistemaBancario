@model SistemaBancario.Models.Transferencias
@{
    ViewBag.Title = "Transferencia";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Transferências</title>
</head>
<body>

    <form method="post">
        <div class="jumbotron" style="margin: 50px 200px; ">
            <div class="row">
                <div class="col-xs-12 col-md-8">
                    <h3>Transferências</h3>
                </div>
                <div class="col-xs-6 col-md-4" style="border:inset">
                    <h4>@Html.LabelFor(model => model.Contas.Saldo, "Saldo") <i id="bt" class="glyphicon glyphicon-eye-open"></i></h4>
                    <h3>R$ @ViewBag.Saldo</h3>
                    @Html.ValidationMessageFor(model => model.Contas.Saldo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @if (ViewBag.mensagemErro != null)
        {
            <script type="text/javascript">
                alert('@ViewBag.mensagemErro');

            </script>
        }
        else if(ViewBag.mensagemSucesso != null)
        {
            <script type="text/javascript">
                alert('@ViewBag.mensagemSucesso');
            </script>
        }

        <div style="border-style: groove; margin: 50px 200px 100px">
            <br />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="valorTransferir" class="col-sm-2 control-label">Informe um valor:</label>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.ValorDeTransferencia, new { htmlAttributes = new { @class = "form-control", placeholder = "R$: 0000,00", @Name = "valor", @id = "valorTransferir", @Type = "text" } })
                        @Html.ValidationMessageFor(model => model.ValorDeTransferencia, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Conta:</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.ContaDestino, new { htmlAttributes = new { @class = "form-control", placeholder = "0000000-0", @Name = "numeroConta" } })
                        @Html.ValidationMessageFor(model => model.ContaDestino, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
            </div>
            <h3 style="margin:10px">Para quem?</h3>
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nome:</label>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.ValorDeTransferencia, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome completo" } })
                        @Html.ValidationMessageFor(model => model.ValorDeTransferencia, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">CPF/CNPJ:</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.ContaDestino, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o CPF ou CNPJ" } })
                        @Html.ValidationMessageFor(model => model.ContaDestino, "", new { @class = "text-danger" })
                    </div>

                </div>
                <button type="submit" class="btn btn-primary btn-lg" style="margin-left:300px">Transferir!</button>
            </div>
        </div>
    </form>
</body>
</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"> </script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
    
<script type="text/javascript">
    $("#valorTransferir").mask('##0,00', { reverse: true });
</script>