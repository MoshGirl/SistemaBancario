@model SistemaBancario.Models.Pagamentos

@{
    ViewBag.Title = "Pagamentos";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pagamentos</title>
</head>
<body>

    <form method="post">
        <div style="border-style: groove; margin: 50px 200px 100px">
            <br />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="valorTransferir" class="col-sm-4 control-label">Escaneie o boleto</label>
                    <button class=" btn btn-primary" style="margin-left:60px">Escanear</button>
                </div>
                <div class="form-group">

                </div>
                <hr />
            </div>
            <h3 style="margin-left:300px">Ou</h3>
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Código do boleto:</label>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.CodigoBoleto , new { htmlAttributes = new { @class = "form-control", placeholder = "Código do boleto" }, @Name="codigoBoleto" })
                        @Html.ValidationMessageFor(model => model.CodigoBoleto, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Valor do boleto:</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control", placeholder = "R$ 00,00", @Name="valorBoleto", @id="valorBoleto", @Type="text" } })
                        @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Data vencimento:</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.DataVencimento, new { htmlAttributes = new { @class = "form-control", placeholder = "00/00/000" }, @Name="dataVencimento" })
                        @Html.ValidationMessageFor(model => model.DataVencimento, "", new { @class = "text-danger" })
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-left:300px">Pagar</button>
            </div>
        </div>
    </form>

</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>

<script type="text/javascript">
    $("#valorBoleto").mask('#.##0,00', { reverse: true });
</script>